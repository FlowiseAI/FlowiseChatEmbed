    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "url": "http://127.0.0.1:3001/index.html",
            "preLaunchTask": "Live Preview: Run Server",
            "sourceMapRenames": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
            ]
        }
    ]
}